<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RideRegisterActivity">


    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>

    <TextView
        android:id="@+id/label1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"

        android:layout_marginTop="100dp"

        android:text="Start Date"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/start"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/label1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_round"

        android:drawablePadding="10dp"
        android:hint="Enter start date"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/start"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"

        android:text="Start Location"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/stsrc"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/label2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_round"

        android:drawablePadding="10dp"
        android:hint="Enter start location"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/label3"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/stsrc"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="10dp"

        android:text="Capacity"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/capacity"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/label3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_round"

        android:drawablePadding="10dp"
        android:hint="Capacity in KG"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <Button
        android:id="@+id/submt"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:drawableLeft="@drawable/send"
        android:layout_below="@id/clr"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        android:textColor="#ffffff"
        android:background="@drawable/bg"
        android:text="Submit" />

    <Button
        android:id="@+id/clr"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:drawableLeft="@drawable/send"
        android:layout_below="@id/checkBox"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:layout_marginTop="10dp"

        android:textColor="#ffffff"
        android:background="@drawable/bg"
        android:text="Clear" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="274dp"
        android:layout_height="70dp"


        android:layout_below="@+id/capacity"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"

        android:layout_marginEnd="73dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Click if refrigeration is available" />

</RelativeLayout>